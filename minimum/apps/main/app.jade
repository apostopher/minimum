    title Minimum Game

    meta(name='description', content='Simple yet addictive card game')
    meta(name='author', content='Rahul Devaskar <apostopher@gmail.com>')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')

    link(rel='stylesheet', href='//fonts.googleapis.com/css?family=Open+Sans:300,400,600,700&amp;subset=latin,latin-ext')
