  body(data-gameid='#{gameid}')
    //if lt IE 7
      p.chromeframe.
        You are using an outdated browser.
        <a href="http://browsehappy.com/">Upgrade your browser today</a> or
        <a href="http://www.google.com/chromeframe/?redirect=true">install Google Chrome Frame</a>
        to better experience this site.

    #gamecontainer.container-fluid
      .row-fluid
        .span12
          header#sitehead
            h3 Minimum game
              sub beta

      #gamerow.row-fluid
        #leftcol.span3
          - if (gameid)
            .thumbnail
              .caption
                form#joinGameFrm.form-horizontal(method='post')
                  label(for='hostname') Your name
                  .input-append
                    input#joinname.input-medium(type='text', name='joinname', required)
                    button.btn.btn-primary(type='submit') Join game
          - else
            .thumbnail
              .caption
                form#hostGameFrm.form-horizontal(method='post')
                  label(for='hostname') Your name
                  .input-append
                    input#hostname.input-medium(type='text', name='hostname', required)
                    button.btn.btn-primary(type='submit') Host game

              #gameiddiv.alert.alert-success.alert-block.hide
                h5 Game hosted!
                p Share the following url with your friends
                p#gameurl
          #startgamediv.thumbnail.hide
            .caption
              form#startGameFrm(method='post')
                button.btn.btn-danger.btn-block(type='submit') Start game
        #rightcol.span9
          .row-fluid
            #topdiv.span12
              ul#otherPlayers.clearfix

          #tablecardsrow.row-fluid
            .span10
              ul#tablecards.clearfix
                li#closedCard(data-type='0')
                  img.img-rounded(src='/img/b.png')
                li#opencards(data-type='1')
                  

      .row-fluid.pushfooter
    #footer.footer
      #footerdiv
        .container-fluid
          #mycardsrow.row-fluid
            .span10.offset1
              ul#mycards.clearfix 

