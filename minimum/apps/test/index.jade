    .container
      .row
        .span4
          form.form-vertical#hostGame
            legend Host a new game
            .control-group
              label.control-label(for='hostname') Enter Name
              .controls
                input#hostname(type='text', name='hostname')
            .control-group
              .controls
                button.btn.btn-primary(type='submit') Host game
          #urlholder

        .span4
          form.form-vertical#joinGame
            legend Join game
            .control-group
              label.control-label(for='playername') Enter Name
              .controls
                input#playername(type='text', name='playername')
            .control-group
              label.control-label(for='gameid') Game ID
              .controls
                input#gameid(type='text', name='gameid')
            .control-group
              .controls
                button.btn.btn-primary(type='submit') Join game

        .span4
          form.form-vertical#startGame
            legend Start game
            .control-group
              label.control-label(for='newgameid') Game ID
              .controls
                input#newgameid(type='text', name='newgameid')
            .control-group
              .controls
                button.btn.btn-primary(type='submit') Start game

